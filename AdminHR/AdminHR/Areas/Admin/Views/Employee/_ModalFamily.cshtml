@using CoreApp.Model.Employee
<div class="modal fade" id="modalFamily" tabindex="-1" role="dialog" aria-labelledby="formModal"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="formModal">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" data-bind="with: model.data.employeeFamily">
                <form class="">
                    <div class="form-group">
                        <label>Full Name</label>
                        <input type="text" class="form-control" placeholder="Full Name" name="FullName" data-bind="value: FullName" />
                    </div>
                    <div class="form-group">
                        <label>Religion</label>
                        @Html.DropDownList("Religion",
                                 Html.GetEnumSelectList<Religion>(),
                                 new { @class = "form-control", data_bind = "value: Religion" })
                    </div>
                    <div class="form-group">
                        <label>Gender</label>
                        @Html.DropDownList("Gender",
                                 Html.GetEnumSelectList<Gender>(),
                                 "Select Gender", new { @class = "form-control", data_bind = "value: Gender" })
                    </div>
                    <div class="form-group">
                        <label>Relationship</label>
                        @Html.DropDownList("RelationShip", new List<SelectListItem>
                        {
                        new SelectListItem { Text = "Parent", Value = "PARENT", Selected=true},
                        new SelectListItem { Text = "Child", Value = "CHILD"},
                        new SelectListItem { Text = "Spouse", Value = "SPOUSE"}
                        }, "Select Relationship", new { @class = "form-control", data_bind = "value: RelationShip" })
                    </div>
                    <div class="form-group">
                        <label>BirthDate</label>
                        <input type="text" class="form-control datepicker" data-bind="value: BirthDate" required />
                    </div>
                    <div class="form-group">
                        <label>BirthPlace</label>
                        <input type="text" class="form-control" data-bind="value: BirthPlace" required />
                    </div>
                    <div class="row">
                        <div class="col-6 col-md-6 col-lg-6">
                            <button type="button" class="btn btn-warning btn-block" data-dismiss="modal">Close</button>
                        </div>
                        <div class="col-6 col-md-6 col-lg-6">
                            <button id="btn-save-family" type="button" class="btn btn-primary btn-block" data-bind="click: model.on.saveFamily">Save</button>
                        </div>
                    </div>                    
                </form>
            </div>
        </div>
    </div>
</div>