<div class="modal fade" id="modalEducation" tabindex="-1" role="dialog" aria-labelledby="formModal"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="formModal">Education</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" data-bind="with: model.data.employeeEducation">
                <form class="">
                    <div class="form-group">
                        <label>School / University</label>
                        <input type="text" class="form-control" placeholder="School / University" name="SchoolName" data-bind="value: SchoolName" />
                    </div>
                    <div class="form-group">
                        <label>Year Start</label>
                        <input type="text" class="form-control" placeholder="Year Start" name="YearStart" data-bind="value: YearStart" />
                    </div>
                    <div class="form-group">
                        <label>Year End</label>
                        <input type="text" class="form-control" placeholder="Year End" name="YearEnd" data-bind="value: YearEnd" />
                    </div>
                    <div class="form-group">
                        <label>Relationship</label>
                        @Html.DropDownList("Title", new List<SelectListItem>
                        {
                        new SelectListItem { Text = "SMU SMK", Value = "SMU/SMK", Selected=true},
                        new SelectListItem { Text = "D3", Value = "D3"},
                        new SelectListItem { Text = "D4", Value = "D4"},
                        new SelectListItem { Text = "S1", Value = "S1"},
                        new SelectListItem { Text = "S2", Value = "S2"},
                        new SelectListItem { Text = "S3", Value = "S3"}
                        }, "Select Title", new { @class = "form-control", data_bind = "value: Title" })
                    </div>
                    <div class="form-group">
                        <label>Major</label>
                        <input type="text" class="form-control" placeholder="Major" name="Major" data-bind="value: Major" />
                    </div>
                    <div class="row">
                        <div class="col-6 col-md-6 col-lg-6">
                            <button type="button" class="btn btn-warning btn-block" data-dismiss="modal">Close</button>
                        </div>
                        <div class="col-6 col-md-6 col-lg-6">
                            <button id="btn-save-education" type="button" class="btn btn-primary btn-block waves-effect" data-bind="click: model.on.saveEducation">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>