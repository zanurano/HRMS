@using CoreApp.Model.Attendance
<script>
    model.prototype = {
        holiday: @Html.Raw(Json.Serialize(new Holiday())),
    }
</script>
<script src="~/js/holiday.js?@(DateTime.Now.Ticks)"></script>

<div class="modal fade" id="modalHoliday" tabindex="-1" role="dialog" aria-labelledby="formModal"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="formModal">Holiday</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="" data-bind="with: model.data.holiday">
                    <div class="form-group">
                        <label>Holiday Name</label>
                        <input type="text" class="form-control input-uppercase" placeholder="Holiday Name" data-bind="value: Name" />
                    </div>

                    <div class="form-group">
                        <label>On Date</label>
                        <input type="text" id="onDate" class="form-control datepicker" placeholder="On Date" data-bind="value: OnDate" />
                    </div>
                    
                    <div class="row">
                        <div class="col-6 col-md-6 col-lg-4">
                            <button type="button" class="btn btn-warning btn-block" data-dismiss="modal">Close</button>
                        </div>
                        <div class="col-6 col-md-6 col-lg-4">
                            <button id="btn-delete" type="button" class="btn btn-danger btn-block waves-effect" data-bind="click: model.on.deleteHoliday">Delete</button>
                        </div>
                        <div class="col-6 col-md-6 col-lg-4">
                            <button id="btn-save" type="button" class="btn btn-primary btn-block waves-effect" data-bind="click: model.on.saveHoliday">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4>@ViewData["Title"]</h4>
                    </div>
                    <div class="card-body">
                        <button type="button" class="btn btn-primary mb-2" data-bind="click: model.on.addNewHoliday">
                            <i class="fas fa-plus"></i> Add New
                        </button>
                        <div class="fc-overflow">
                            <div id="holidayCalendar"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(function () {
        model.init.holiday();
    })
</script>